{
    "name": "pomotroid",
    "description": "working time distributor",
    "author": {
        "email": "nodeTempest@gmail.com",
        "name": "Topchyi Nikolay",
        "url": "https://github.com/nodeTempest"
    },
    "version": "0.1.0",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/nodeTempest/pomotroid-desktop"
    },
    "dependencies": {
        "@material-ui/system": "^4.9.10",
        "@reduxjs/toolkit": "^1.3.6",
        "@types/moment": "^2.13.0",
        "@types/node": "^12.12.19",
        "@types/ramda": "^0.27.6",
        "@types/react": "^16.9.16",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.5",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-transition-group": "^4.2.3",
        "@types/redux-persist": "^4.3.1",
        "@types/styled-components": "^4.4.1",
        "@types/webpack-env": "^1.15.2",
        "electron-is-dev": "^1.2.0",
        "electron-log": "^4.2.0",
        "moment": "^2.25.3",
        "ramda": "^0.27.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.1.3",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.3.0",
        "react-transition-group": "^4.3.0",
        "react-use": "^15.1.0",
        "redux": "^4.0.4",
        "redux-persist": "^6.0.0",
        "redux-saga": "^1.1.3",
        "styled-components": "^4.4.1"
    },
    "devDependencies": {
        "concurrently": "^5.2.0",
        "cross-env": "^7.0.2",
        "customize-cra": "^0.9.1",
        "electron": "^11.5.0",
        "electron-builder": "^22.7.0",
        "electron-devtools-installer": "^3.0.0",
        "eslint": "^6.7.2",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19",
        "react-app-rewired": "^2.1.5",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^4.1.0",
        "typescript": "^3.7.3",
        "typescript-tslint-plugin": "^0.5.5",
        "wait-on": "^5.0.0"
    },
    "homepage": "./",
    "main": "public/electron.js",
    "scripts": {
        "lint": "tslint -p .",
        "format": "prettier \"./**/*.{js,jsx,ts,tsx,css,scss,json,md,html}\" --write",
        "react-start": "react-app-rewired start",
        "react-build": "react-app-rewired build",
        "react-eject": "react-scripts eject",
        "electron-build": "yarn react-build && yarn electron-builder",
        "electron-start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
    },
    "build": {
        "productName": "Pomotroid",
        "publish": {
            "provider": "github"
        },
        "win": {
            "icon": "build/favicon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "nsis": {
            "artifactName": "${productName} v${version} installer.${ext}",
            "oneClick": true
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./src/**/*.{js,jsx,ts,tsx}": "yarn lint --fix",
        "./src/**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml,scss,sass}": [
            "prettier --write",
            "git add"
        ]
    }
}
